{
  "name": "SmartShopping Demo",
  "short_name": "Demo",
  "version": "1.0.0",
  "description": "Coupon Autoapply",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background-bundle.js"
  },
  "content_scripts": [
    {
      "js": ["content-bundle.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "action": {
    "default_icon": "smartshoppingIcon.png"
  },
  "icons": {
    "16": "smartshoppingIcon.png",
    "48": "smartshoppingIcon.png",
    "128": "smartshoppingIcon.png"
  }
}
